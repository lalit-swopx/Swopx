<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/pic"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/default_profile_pic"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/colorBlack"
                android:text="@string/stone_aggregate"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:background="@drawable/rectangle_yellow"
                    android:textColor="@color/colorWhite"
                    android:text="5.0"
                    android:maxLength="3"
                    android:layout_height="wrap_content" />
                <RatingBar
                    android:id="@+id/bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:progressBackgroundTint="@color/colorlight_grey"
                    android:progressTint="@color/colorStar"
                    style="@android:style/Widget.Holo.Light.RatingBar.Small"
                    android:isIndicator="true"
                    android:stepSize="0.1"
                    android:secondaryProgressTint="@android:color/transparent"
                    android:numStars="5"/>
                <TextView
                    android:id="@+id/views"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:visibility="gone"
                    android:textColor="@color/colorBlack"
                    android:text="(500)"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:padding="@dimen/_3sdp"
                android:visibility="visible"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="@string/stone_aggregate"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingRight="@dimen/_5sdp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/chat_box"
                android:text="@string/stone_aggregate"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/radio_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:weightSum="1">
                <CheckBox
                    android:id="@+id/award"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_rectangle_selector"
                    android:button="@drawable/checkbox_selector"
                    android:gravity="center"
                    android:text="Call"
                    android:checked="false"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:inputType="text"
                    android:padding="@dimen/_7sdp"
                    android:textColor="@color/colorblue"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp" />

                <CheckBox
                    android:id="@+id/chat_rad"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_rectangle_selector"
                    android:button="@drawable/checkbox_selector"
                    android:checked="false"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Chat"
                    android:inputType="text"
                    android:padding="@dimen/_7sdp"
                    android:textColor="@color/colorblue"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/back_btn_blue"/>
    </LinearLayout>

</android.support.v7.widget.CardView>