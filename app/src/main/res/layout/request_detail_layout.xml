<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorWhite"
    android:scrollbars="none"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stone Aggregate"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_16sdp"
        android:padding="@dimen/_5sdp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/subcat"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20MM"
        android:textSize="@dimen/_16sdp"
        android:padding="@dimen/_5sdp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN /"
        android:textSize="@dimen/_12sdp"
        android:padding="@dimen/_5sdp"
        android:textStyle="bold"
        android:textColor="@color/colorGreenish"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:14:12 min left"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/colorGreenish"/></LinearLayout>
    <TextView
        android:id="@+id/description"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:inputType="textMultiLine"
        android:textSize="@dimen/_12sdp"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/colorBlack"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorlight_grey_view"/>
    <TextView
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordered Quantity"
        android:textSize="@dimen/_11sdp"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000 Ton"
        android:textStyle="bold"
        android:textSize="@dimen/_13sdp"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/colorBlack"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorlight_grey_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight=".45"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avg Bid(INR)"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/avg_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000 Ton"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green_slash"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".45"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Bids"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/total_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000 Ton"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone"
        android:background="@color/colorlight_grey_view"/>
    <TextView
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transportation"
        android:textSize="@dimen/_11sdp"
        android:visibility="gone"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/colorBlack"/>
    <Spinner
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:id="@+id/spn_convence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select"
        android:visibility="gone"
        android:textSize="@dimen/_13sdp"
        android:padding="@dimen/_5sdp"
        android:inputType="textPassword"
        android:textColor="@color/colorBlack"/>
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Not Required"-->
        <!--android:textSize="@dimen/_13sdp"-->
        <!--android:padding="@dimen/_5sdp"-->
        <!--android:textColor="@color/colorBlack"/>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorlight_grey_view"/>
    <TextView
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project ID"
        android:textSize="@dimen/_11sdp"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/project_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15189045"
        android:textSize="@dimen/_13sdp"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/colorBlack"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorlight_grey_view"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/employess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employer"
                android:textSize="@dimen/_13sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorBlack"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rating_count"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_9sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:background="@drawable/rectangle_yellow"
                    android:textColor="@color/colorWhite"
                    android:text="5.0"
                    android:maxLength="3"
                    android:layout_height="wrap_content" />
                <RatingBar
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:progressBackgroundTint="@color/colorlight_grey"
                    android:progressTint="@color/colorStar"
                    style="@android:style/Widget.Holo.Light.RatingBar.Small"
                    android:isIndicator="true"
                    android:stepSize="0.1"
                    android:secondaryProgressTint="@android:color/transparent"
                    android:numStars="5"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/pyment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Verified"
                android:visibility="invisible"
                android:background="@drawable/green_rectangle"
                android:textSize="@dimen/_8sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight=".5">
        <TextView
            android:id="@+id/place_bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_a_bid"
            android:background="@drawable/curve_solid_rectangle"
            android:textSize="@dimen/_13sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/colorWhite"/></LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>