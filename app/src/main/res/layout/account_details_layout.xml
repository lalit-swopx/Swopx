<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/edit_header_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Directory and Follow Settings"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>

            <CheckBox
                android:id="@+id/list_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List me on the swopx diretory"
                android:inputType="text"
                android:padding="@dimen/_5sdp"
                android:button="@drawable/circle_selector"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorBlack"/>
            <CheckBox
                android:id="@+id/allow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allow other to follow me"
                android:inputType="text"
                android:padding="@dimen/_5sdp"
                android:button="@drawable/circle_selector"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorBlack"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I'm looking to:"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColor="@color/colorBlack"/>

            <CheckBox
                android:id="@+id/buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buy"
                android:inputType="text"
                android:padding="@dimen/_5sdp"
                android:button="@drawable/circle_selector"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorBlack"/>
            <CheckBox
                android:id="@+id/trade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trade"
                android:padding="@dimen/_5sdp"
                android:button="@drawable/circle_selector"
                android:inputType="text"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>